<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#222144"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_height="25dp">
                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:background="@drawable/circle">


                            <ImageView
                                android:layout_width="10dp"
                                android:src="@drawable/ic_up_arrow"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="10dp">


                            </ImageView>

                        </RelativeLayout>


                    </FrameLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_threedots"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <FrameLayout
                        android:layout_width="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="25dp">
                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:background="@drawable/des_circle">


                            <ImageView
                                android:layout_width="10dp"
                                android:src="@drawable/ic_down_arrow"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="10dp">


                            </ImageView>

                        </RelativeLayout>


                    </FrameLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_alignParentTop="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/loc_origin"
                            android:textColor="#fff"
                            android:text="Stare Maisto"
                            android:textSize="22sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:id="@+id/or_time"
                            android:text="Nov 24, 18:00"
                            android:alpha="0.6"
                            android:textSize="15sp">

                        </TextView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:id="@+id/loc_destination"
                            android:text="Stare Maisto"
                            android:textSize="22sp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:id="@+id/des_time"
                            android:text="Nov 24, 18:00"
                            android:alpha="0.6"
                            android:textSize="15sp">

                        </TextView>



                    </LinearLayout>

                </RelativeLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:weightSum="100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Total"
                    android:textColor="#fff"
                    android:alpha="0.6"
                    android:textSize="15sp"
                    android:layout_weight="20">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="45sp"
                    android:id="@+id/travel_cost"
                    android:textColor="#fff"
                    android:text="$16"
                    android:layout_weight="60">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journey_duration"
                    android:text="Travel time: 1h 35min"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:alpha="0.6"
                    android:layout_weight="12">

                </TextView>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>
